#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");

	int a;
	cout << "Введите число:";
	cin >> a;
	if (a == 1) {
		cout << "Лето!";
	}
	else if (a == 2) {
		cout << "Осень!";
	}
	else if (a == 3) {
		cout << "Зима!";
	}
	else if (a == 4) {
		cout << "Весна!";
	}




	int _;
	cin >> _;
	return 0;
}
